.page-header
  %h1= @memo.title
%dl.dl-horizontal
%dd= @memo.rendered_body.html_safe
= link_to t('.back', :default => t("helpers.links.back")), "/admin" + memos_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), "/admin" + edit_memo_path(@memo), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), "/admin" + memo_path(@memo), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'                                                                                   |
